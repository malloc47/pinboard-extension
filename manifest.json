{
    "name": "pinboard",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Allows you to pin things to your pinboard",
    "homepage_url": "http://localhost:8080",
    "icons": {
	"16": "icons/icon16.png",
	"48": "icons/icon48.png",
	"128": "icons/icon128.png"
    },
    "background": {
	"scripts": ["src/background.js"],
	"persistent": false
    },
    "permissions": [
	"tabs",
	"*://*/*"
    ],
    "browser_action": {
	"default_icon": "icons/icon19.png",
	"default_title": "pin it!"
    }
}
